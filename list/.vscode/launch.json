{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      //如果需要修改可执行文件名称需要同步修改my_cmake_exe
      "program": "${workspaceFolder}/build/my_cmake_exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment":[],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerPath": "/usr/bin/gdb",

      "preLaunchTask": "Build"

    }
  ]
}